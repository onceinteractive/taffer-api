    <icon gap:platform="ios" hegiht="100" src="res/icon/ios/icon-50@2x.png" width="100" />
    <icon gap:platform="ios" height="60" src="res/icon/ios/icon-60.png" width="60" />
    <icon gap:platform="ios" hegiht="120" src="res/icon/ios/icon-60@2x.png" width="120" />
